<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - BookTracker</title>
    <script type="importmap"></script>
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="false" />
</head>

<body>
    <header>
        <nav class="navbar">
            <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">Book Collection</a>
            <input type="checkbox" id="menu-toggle" class="menu-toggle">
            <label for="menu-toggle" class="menu-icon"></label>
            <span></span>
            <span></span>
            <span></span>
            </label>
            <ul>
                <li>
                    <a asp-area="" asp-controller="Home" asp-action="Index">Books</a>
                </li>
                <li>
                    <a asp-area="" asp-controller="Home" asp-action="History">Update History</a>
                </li>
            </ul>
        </nav>
    </header>
    <div class="container">
        @RenderBody()
    </div>

    <script src="~/js/components.js" asp-append-version="false"></script>
    <script src="~/js/site.js" asp-append-version="false"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>

</html>
